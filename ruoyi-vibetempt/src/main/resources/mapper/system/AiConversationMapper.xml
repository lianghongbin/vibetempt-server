<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.vibetempt.mapper.AiConversationMapper">
    
    <resultMap type="AiConversation" id="AiConversationResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="characterId"    column="character_id"    />
        <result property="title"    column="title"    />
        <result property="description"    column="description"    />
        <result property="status"    column="status"    />
        <result property="messageCount"    column="message_count"    />
        <result property="totalTokens"    column="total_tokens"    />
        <result property="startTime"    column="start_time"    />
        <result property="endTime"    column="end_time"    />
        <result property="lastMessageTime"    column="last_message_time"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="createBy"    column="create_by"    />
        <result property="updateBy"    column="update_by"    />
        <result property="delFlag"    column="del_flag"    />
    </resultMap>

    <sql id="selectAiConversationVo">
        select id, user_id, character_id, title, description, status, message_count, total_tokens, start_time, end_time, last_message_time, create_time, update_time, create_by, update_by, del_flag from ai_conversation
    </sql>

    <select id="selectAiConversationList" parameterType="AiConversation" resultMap="AiConversationResult">
        <include refid="selectAiConversationVo"/>
        <where>  
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="characterId != null "> and character_id = #{characterId}</if>
            <if test="title != null  and title != ''"> and title = #{title}</if>
            <if test="description != null  and description != ''"> and description = #{description}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="messageCount != null "> and message_count = #{messageCount}</if>
            <if test="totalTokens != null "> and total_tokens = #{totalTokens}</if>
            <if test="startTime != null "> and start_time = #{startTime}</if>
            <if test="endTime != null "> and end_time = #{endTime}</if>
            <if test="lastMessageTime != null "> and last_message_time = #{lastMessageTime}</if>
        </where>
    </select>
    
    <select id="selectAiConversationById" parameterType="Long" resultMap="AiConversationResult">
        <include refid="selectAiConversationVo"/>
        where id = #{id}
    </select>

    <insert id="insertAiConversation" parameterType="AiConversation" useGeneratedKeys="true" keyProperty="id">
        insert into ai_conversation
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="characterId != null">character_id,</if>
            <if test="title != null">title,</if>
            <if test="description != null">description,</if>
            <if test="status != null">status,</if>
            <if test="messageCount != null">message_count,</if>
            <if test="totalTokens != null">total_tokens,</if>
            <if test="startTime != null">start_time,</if>
            <if test="endTime != null">end_time,</if>
            <if test="lastMessageTime != null">last_message_time,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="createBy != null">create_by,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="delFlag != null">del_flag,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="characterId != null">#{characterId},</if>
            <if test="title != null">#{title},</if>
            <if test="description != null">#{description},</if>
            <if test="status != null">#{status},</if>
            <if test="messageCount != null">#{messageCount},</if>
            <if test="totalTokens != null">#{totalTokens},</if>
            <if test="startTime != null">#{startTime},</if>
            <if test="endTime != null">#{endTime},</if>
            <if test="lastMessageTime != null">#{lastMessageTime},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="delFlag != null">#{delFlag},</if>
         </trim>
    </insert>

    <update id="updateAiConversation" parameterType="AiConversation">
        update ai_conversation
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="characterId != null">character_id = #{characterId},</if>
            <if test="title != null">title = #{title},</if>
            <if test="description != null">description = #{description},</if>
            <if test="status != null">status = #{status},</if>
            <if test="messageCount != null">message_count = #{messageCount},</if>
            <if test="totalTokens != null">total_tokens = #{totalTokens},</if>
            <if test="startTime != null">start_time = #{startTime},</if>
            <if test="endTime != null">end_time = #{endTime},</if>
            <if test="lastMessageTime != null">last_message_time = #{lastMessageTime},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteAiConversationById" parameterType="Long">
        delete from ai_conversation where id = #{id}
    </delete>

    <delete id="deleteAiConversationByIds" parameterType="String">
        delete from ai_conversation where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>