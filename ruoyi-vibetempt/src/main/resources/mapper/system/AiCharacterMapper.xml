<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.vibetempt.mapper.AiCharacterMapper">
    
    <resultMap type="AiCharacter" id="AiCharacterResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="description"    column="description"    />
        <result property="personality"    column="personality"    />
        <result property="avatarUrl"    column="avatar_url"    />
        <result property="characterType"    column="character_type"    />
        <result property="creatorId"    column="creator_id"    />
        <result property="isActive"    column="is_active"    />
        <result property="isPublic"    column="is_public"    />
        <result property="totalUsers"    column="total_users"    />
        <result property="totalConversations"    column="total_conversations"    />
        <result property="totalMessages"    column="total_messages"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="createBy"    column="create_by"    />
        <result property="updateBy"    column="update_by"    />
        <result property="delFlag"    column="del_flag"    />
    </resultMap>

    <sql id="selectAiCharacterVo">
        select id, name, description, personality, avatar_url, character_type, creator_id, is_active, is_public, total_users, total_conversations, total_messages, create_time, update_time, create_by, update_by, del_flag from ai_character
    </sql>

    <select id="selectAiCharacterList" parameterType="AiCharacter" resultMap="AiCharacterResult">
        <include refid="selectAiCharacterVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="description != null  and description != ''"> and description = #{description}</if>
            <if test="personality != null  and personality != ''"> and personality = #{personality}</if>
            <if test="avatarUrl != null  and avatarUrl != ''"> and avatar_url = #{avatarUrl}</if>
            <if test="characterType != null  and characterType != ''"> and character_type = #{characterType}</if>
            <if test="creatorId != null "> and creator_id = #{creatorId}</if>
            <if test="isActive != null "> and is_active = #{isActive}</if>
            <if test="isPublic != null "> and is_public = #{isPublic}</if>
            <if test="totalUsers != null "> and total_users = #{totalUsers}</if>
            <if test="totalConversations != null "> and total_conversations = #{totalConversations}</if>
            <if test="totalMessages != null "> and total_messages = #{totalMessages}</if>
        </where>
    </select>
    
    <select id="selectAiCharacterById" parameterType="Long" resultMap="AiCharacterResult">
        <include refid="selectAiCharacterVo"/>
        where id = #{id}
    </select>

    <insert id="insertAiCharacter" parameterType="AiCharacter" useGeneratedKeys="true" keyProperty="id">
        insert into ai_character
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">name,</if>
            <if test="description != null">description,</if>
            <if test="personality != null">personality,</if>
            <if test="avatarUrl != null">avatar_url,</if>
            <if test="characterType != null">character_type,</if>
            <if test="creatorId != null">creator_id,</if>
            <if test="isActive != null">is_active,</if>
            <if test="isPublic != null">is_public,</if>
            <if test="totalUsers != null">total_users,</if>
            <if test="totalConversations != null">total_conversations,</if>
            <if test="totalMessages != null">total_messages,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="createBy != null">create_by,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="delFlag != null">del_flag,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">#{name},</if>
            <if test="description != null">#{description},</if>
            <if test="personality != null">#{personality},</if>
            <if test="avatarUrl != null">#{avatarUrl},</if>
            <if test="characterType != null">#{characterType},</if>
            <if test="creatorId != null">#{creatorId},</if>
            <if test="isActive != null">#{isActive},</if>
            <if test="isPublic != null">#{isPublic},</if>
            <if test="totalUsers != null">#{totalUsers},</if>
            <if test="totalConversations != null">#{totalConversations},</if>
            <if test="totalMessages != null">#{totalMessages},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="delFlag != null">#{delFlag},</if>
         </trim>
    </insert>

    <update id="updateAiCharacter" parameterType="AiCharacter">
        update ai_character
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="description != null">description = #{description},</if>
            <if test="personality != null">personality = #{personality},</if>
            <if test="avatarUrl != null">avatar_url = #{avatarUrl},</if>
            <if test="characterType != null">character_type = #{characterType},</if>
            <if test="creatorId != null">creator_id = #{creatorId},</if>
            <if test="isActive != null">is_active = #{isActive},</if>
            <if test="isPublic != null">is_public = #{isPublic},</if>
            <if test="totalUsers != null">total_users = #{totalUsers},</if>
            <if test="totalConversations != null">total_conversations = #{totalConversations},</if>
            <if test="totalMessages != null">total_messages = #{totalMessages},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteAiCharacterById" parameterType="Long">
        delete from ai_character where id = #{id}
    </delete>

    <delete id="deleteAiCharacterByIds" parameterType="String">
        delete from ai_character where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>